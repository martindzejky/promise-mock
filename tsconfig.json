{
    "include": ["src"],
    "exclude": ["spec", "node_modules"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "noEmit": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    }
}
